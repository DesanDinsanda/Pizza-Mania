<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SelectLocation">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="413dp"
        android:layout_height="41dp"
        android:background="@color/dark_grey"
        android:gravity="center"
        android:text="@string/location_heading"
        android:textColor="@color/white"
        android:textSize="20sp"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/myLocationBtn"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/my_location"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.95"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.746" />

    <ProgressBar
        android:id="@+id/myLocationLoadingAnim"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        map:layout_constraintBottom_toTopOf="@+id/map"
        map:layout_constraintEnd_toStartOf="@+id/map"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toEndOf="@+id/map"
        map:layout_constraintTop_toBottomOf="@+id/map"
        map:layout_constraintVertical_bias="0.5" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/map_marker"
        android:layout_width="71dp"
        android:layout_height="83dp"
        android:visibility="gone"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="@+id/map"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="@+id/map"
        map:lottie_autoPlay="true"
        map:lottie_loop="true"
        map:lottie_rawRes="@raw/map_marker" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/location_selector"
        android:layout_width="71dp"
        android:layout_height="83dp"
        android:visibility="gone"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.5"
        map:lottie_autoPlay="true"
        map:lottie_loop="true"
        map:lottie_rawRes="@raw/location_selector" />

    <ImageButton
        android:id="@+id/manualLocationBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/edit_btn"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.931"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.658" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/finalizeLocationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:backgroundTint="@color/orange"
        android:enabled="false"
        android:text="@string/select_location_btn"
        android:textColor="@color/white"
        android:textSize="20sp"
        map:cornerRadius="16dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.976" />

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="34dp"
        android:background="@drawable/info_background_rounded"
        android:orientation="horizontal"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toStartOf="@+id/map"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toEndOf="@+id/map"
        map:layout_constraintTop_toTopOf="@+id/map"
        map:layout_constraintVertical_bias="0.068">

        <AutoCompleteTextView
            android:id="@+id/geolocationText"
            android:layout_width="267dp"
            android:layout_height="35dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:hint="@string/search_location_hint"/>

        <ImageButton
            android:id="@+id/geolocationBtn"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/search" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>